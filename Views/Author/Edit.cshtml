@model AuthorViewModel

<h3 style="color: #4caf50;">Edit Author</h3>

<form method="post" asp-controller="Author" asp-action="Edit">
    <div>
        <label>First Name</label>
        <input asp-for="FirstName" class="form-control" type="text" />
        <span asp-validation-for="FirstName" class="text-danger mt-2 fw-bold"></span>
    </div>

    <div>
        <label>Last Name</label>
        <textarea asp-for="LastName" rows="4" class="form-control"></textarea>
        <span asp-validation-for="LastName" class="text-danger mt-2 fw-bold"></span>
    </div>

    <div>
        <label>Date Of Birth</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
        <span asp-validation-for="DateOfBirth" class="text-danger mt-2 fw-bold"></span>
    </div>

    <button type="submit" class="btn" style="background-color: #4caf50; color: white; mt-2">Submit</button>
</form>
