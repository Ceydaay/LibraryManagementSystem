@model List<LibraryManagementSystem.Models.Author>

<a asp-controller="Author" asp-action="Create" class="btn" style="background-color: #4caf50; color: white; font-weight: bold; margin-bottom: 1rem;">Add New</a>
@foreach (var author in Model)
{
    <div class="card mb-3" style="border: 1px solid #4caf50;">
        <h5 class="card-header" style="background-color: #4caf50; color: white;">Author</h5>
        <div class="card-body">
            <h5 class="card-title" style="color: #4caf50;">@author.FirstName</h5>
            <p class="card-text" style="color: #4caf50;">@author.LastName</p>
            <p class="card-text" style="color: #4caf50;">@author.DateOfBirth.ToShortDateString()</p>

            <a asp-controller="Author" asp-action="Details" asp-route-id="@author.Id" class="btn" style="background-color: #4caf50; color: white; margin-right: 0.5rem;">Details</a>
            <a asp-controller="Author" asp-action="Edit" asp-route-id="@author.Id" class="btn" style="background-color: #ff9800; color: white; margin-right: 0.5rem;">Edit</a>
            <form asp-controller="Author" asp-action="Delete" asp-route-id="@author.Id" method="post" class="d-inline">
                <button type="submit" class="btn" style="background-color: #f44336; color: white;">Delete</button>
            </form>
        </div>
    </div>
}
