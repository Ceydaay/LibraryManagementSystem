@model BookViewModel

<h3>Edit Book</h3>

<form method="post" asp-controller="Book" asp-action="Edit">

    
    <div>
        <label>Title</label>
        <input asp-for="Title" class="form-control" type="text" />
        <span asp-validation-for="Title" class="text-danger mt-2 fw-bold"></span>
    </div>

    <div>
        <label>Genre</label>
        <textarea asp-for="Genre" rows="4" class="form-control"></textarea>
        <span asp-validation-for="Genre" class="text-danger mt-2 fw-bold"></span>
    </div>

    <div>
        <label>Publish Date</label>
        <textarea asp-for="PublishDate" rows="4" class="form-control"></textarea>
        <span asp-validation-for="PublishDate" class="text-danger mt-2 fw-bold"></span>
    </div>

    <div>
        <label>ISBN</label>
        <textarea asp-for="ISBN" rows="4" class="form-control"></textarea>
        <span asp-validation-for="ISBN" class="text-danger mt-2 fw-bold"></span>
    </div>
    <div>
        <label>Author</label>
        <select asp-for="AuthorId" asp-items="@(ViewBag.Authors as IEnumerable<SelectListItem>)" class="form-control">
            <option value=disabled selected>Please Select</option>
        </select>
        <span asp-validation-for="AuthorId" class="text-danger mt-2 fw-bold"></span>
    </div>
    
    <button type="submit" class="btn btn-success mt-2">Kaydet</button>
</form>