@model List<LibraryManagementSystem.Models.Book>

<!-- Add New Book Button -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary">Book List</h2>
    <a asp-controller="Book" asp-action="Create" class="btn btn-success fw-bold">+ Add New Book</a>
</div>

<div class="row g-4">
    @foreach (var book in Model)
    {
        <div class="col-12">
            <!-- Tüm genişliği kapla -->
            <div class="card h-100 shadow-sm border-0">
                <!-- Book Title Header -->
                <div class="card-header bg-primary text-white text-center">
                    <h5 class="mb-0">@book.Title</h5>
                </div>

                <!-- Book Details Body -->
                <div class="card-body d-flex flex-column">
                    <p class="card-text">
                        <span class="fw-bold">Genre: </span> @book.Genre
                    </p>
                    <p class="card-text">
                        <span class="fw-bold">Copies Available: </span> @book.CopiesAvailable
                    </p>

                    <!-- Action Buttons -->
                    <div class="mt-auto text-center">
                        <!-- Details Button -->
                        <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-primary me-2 mb-2">Details</a>

                        <!-- Edit Button -->
                        <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-outline-warning me-2 mb-2">Edit</a>

                        <!-- Delete Button -->
                        <form asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
